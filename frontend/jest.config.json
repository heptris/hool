{
  "roots": ["<rootDir>/tests/"],
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "\\.(css|less|svg|png|jpg)$": "identity-obj-proxy"
  },
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleDirectories": ["node_modules", "src"]
}
